@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>SuperShoes</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Stores</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: stores">
                    <li>
                        <strong><span data-bind="text: name"></span></strong>: <span data-bind="text: address"></span>
                        <small><a href="#" data-bind="click: $parent.getArticles">Articles</a></small>
                    </li>
                </ul>
                <small><a href="#" data-bind="click: getAllArticles">All Articles</a></small>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Articles</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    <li>
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>Name</td>
                                    <td>Description</td>
                                    <td>Price</td>
                                    <td>Total in Shelf</td>
                                    <td>Total in Vault</td>
                                </tr>
                            </thead>
                            <tbody data-bind='foreach: articles'>
                                <tr>
                                    <td data-bind="text: name"></td>
                                    <td data-bind="text: description"></td>
                                    <td data-bind="text: price">
                                    <td data-bind="text: total_in_shelf"></td>
                                    <td data-bind="text: total_in_vault"></td>
                                </tr>
                            </tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- TODO: Add new book -->
    </div>
</div>