@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="page-header">
    <h1>SuperShoes</h1>
</div>

<div class="row">

    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading pane">
                <h2 class="panel-title">Stores</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    <li>
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>Name</td>
                                    <td>Address</td>
                                    <td>Articles</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody data-bind='foreach: stores'>
                                <tr>
                                    <td data-bind="text: name"></td>
                                    <td data-bind="text: address"></td>
                                    <td><input type="button" class="btn btn-primary btn-xs" value="Edit" data-bind="click: $parent.getArticles" /></td>
                                    <td><input type="button" class="btn btn-danger btn-xs" value="Remove" data-bind="click: $parent.removeStore" /></td>
                                    <td><small><a href="#" data-bind="click: $parent.getArticles">Articles</a></small></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td><input type="button" class="btn btn-primary btn-xs" value="New" data-bind="click: setVisible"/></td>
                                    <td><small><a href="#" data-bind="click: getAllArticles">All Articles</a></small></td>
                                </tr>
                            </tfoot>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <div class="col-md-7">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Articles</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    <li>
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>Name</td>
                                    <td>Description</td>
                                    <td>Price</td>
                                    <td>Total in Shelf</td>
                                    <td>Total in Vault</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody data-bind='foreach: articles'>
                                <tr>
                                    <td data-bind="text: name"></td>
                                    <td data-bind="text: description"></td>
                                    <td data-bind="text: price">
                                    <td data-bind="text: total_in_shelf"></td>
                                    <td data-bind="text: total_in_vault"></td>
                                    <td><input type="button" class="btn btn-primary btn-xs" value="Edit" data-bind="click: $parent.getArticles" /></td>
                                    <td><input type="button" class="btn btn-danger btn-xs" value="Remove" data-bind="click: $parent.removeArticle" /></td>
                                </tr>
                            </tbody>
                            <tfoot data-bind="visible: articles">
                                <tr>
                                    <td><input type="button" class="btn btn-primary btn-xs" value="New" /></td>
                                </tr>
                            </tfoot>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- TODO: Add new book -->
    </div>
</div>

<div class="row" data-bind="visible: visibility">

    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Store</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputAuthor" class="col-sm-2 control-label">Store</label>
                        
                    </div>

                    <div class="form-group">
                        <label for="inputTitle" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTitle" />
                        </div>

                        <label for="inputYear" class="col-sm-2 control-label">Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputYear" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
